generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Player {
  id       String @id @default(cuid())
  username String @unique

  snapshots PlayerSnapshot[]

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  lastFetchedAt DateTime @default(now())
}

model PlayerSnapshot {
  id String @id @default(cuid())

  timestamp DateTime @default(now())

  rank    Int
  totalXp BigInt
  totalSkill BigInt
  combatLevel BigInt
  loggedIn Boolean

  playerId String
  player   Player @relation(fields: [playerId], references: [id])

  skills     SkillSnapshot[]
  activities ActivitySnapshot[]

  @@index([playerId, timestamp])
}

model SkillSnapshot {
  id         String         @id @default(cuid())
  snapshot   PlayerSnapshot @relation(fields: [snapshotId], references: [id])
  snapshotId String

  name  SkillName
  xp    BigInt
  rank  BigInt
  level BigInt
}

model ActivitySnapshot {
  id         String         @id @default(cuid())
  snapshot   PlayerSnapshot @relation(fields: [snapshotId], references: [id])
  snapshotId String

  date    DateTime
  text    String
  details String
}

enum SkillName {
  Attack
  Defence
  Strength
  Constitution
  Ranged
  Prayer
  Magic
  Cooking
  Woodcutting
  Fletching
  Fishing
  Firemaking
  Crafting
  Smithing
  Mining
  Herblore
  Agility
  Thieving
  Slayer
  Farming
  Runecrafting
  Hunter
  Construction
  Summoning
  Dungeoneering
  Divination
  Invention
  Archaeology
}
